{
  "name": "puter-ai-agent",
  "displayName": "Puter AI Agent",
  "description": "AI-powered coding assistant using Puter.js - Free OpenAI API access without API keys",
  "version": "1.0.0",
  "publisher": "MahdiBR",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "AI",
    "Programming Languages",
    "Snippets",
    "Machine Learning"
  ],
  "keywords": [
    "ai",
    "assistant",
    "puter",
    "gpt",
    "openai",
    "chat",
    "code-generation"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "puter-ai-sidebar",
          "title": "Puter AI Agent",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "puter-ai-sidebar": [
        {
          "type": "webview",
          "id": "puter-ai-chat",
          "name": "AI Chat"
        }
      ]
    },
    "commands": [
      {
        "command": "puter-ai.explainCode",
        "title": "Explain Code",
        "category": "Puter AI"
      },
      {
        "command": "puter-ai.generateCode",
        "title": "Generate Code from Description",
        "category": "Puter AI"
      },
      {
        "command": "puter-ai.refactorCode",
        "title": "Refactor Code",
        "category": "Puter AI"
      },
      {
        "command": "puter-ai.addComments",
        "title": "Add Comments",
        "category": "Puter AI"
      },
      {
        "command": "puter-ai.fixErrors",
        "title": "Fix Errors",
        "category": "Puter AI"
      },
      {
        "command": "puter-ai.generateTests",
        "title": "Generate Unit Tests",
        "category": "Puter AI"
      },
      {
        "command": "puter-ai.openChat",
        "title": "Open Chat",
        "category": "Puter AI"
      },
      {
        "command": "puter-ai.agentMode",
        "title": "Agent Mode: Modify Code",
        "category": "Puter AI"
      },
      {
        "command": "puter-ai.toggleAgentMode",
        "title": "Toggle Agent Mode",
        "category": "Puter AI"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "puter-ai.explainCode",
          "when": "editorHasSelection",
          "group": "puter-ai@1"
        },
        {
          "command": "puter-ai.refactorCode",
          "when": "editorHasSelection",
          "group": "puter-ai@2"
        },
        {
          "command": "puter-ai.addComments",
          "when": "editorHasSelection",
          "group": "puter-ai@3"
        },
        {
          "command": "puter-ai.fixErrors",
          "when": "editorHasSelection",
          "group": "puter-ai@4"
        }
      ],
      "commandPalette": [
        {
          "command": "puter-ai.explainCode",
          "when": "editorHasSelection"
        },
        {
          "command": "puter-ai.refactorCode",
          "when": "editorHasSelection"
        },
        {
          "command": "puter-ai.addComments",
          "when": "editorHasSelection"
        },
        {
          "command": "puter-ai.fixErrors",
          "when": "editorHasSelection"
        }
      ]
    },
    "configuration": {
      "title": "Puter AI Agent",
      "properties": {
        "puterAI.defaultModel": {
          "type": "string",
          "default": "claude-sonnet-4-5",
          "enum": [
            "claude-sonnet-4-5",
            "claude-sonnet-4",
            "claude-opus-4-1",
            "claude-opus-4",
            "claude-haiku-4-5",
            "gpt-5.1",
            "gpt-5",
            "gpt-5-nano",
            "gpt-5-mini",
            "gpt-5-chat-latest",
            "gpt-4.1",
            "gpt-4o",
            "gpt-4o-mini"
          ],
          "description": "Default AI model to use"
        },
        "puterAI.enableAgentMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable agent mode to allow AI to directly modify code"
        },
        "puterAI.agentAutoApply": {
          "type": "boolean",
          "default": false,
          "description": "Auto-apply agent changes without confirmation"
        },
        "puterAI.temperature": {
          "type": "number",
          "default": 0.7,
          "minimum": 0,
          "maximum": 1,
          "description": "Controls randomness (0 = focused, 1 = creative)"
        },
        "puterAI.maxTokens": {
          "type": "number",
          "default": 2000,
          "minimum": 100,
          "maximum": 4000,
          "description": "Maximum response length"
        },
        "puterAI.enableStreaming": {
          "type": "boolean",
          "default": true,
          "description": "Enable streaming responses for better UX"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {}
}
